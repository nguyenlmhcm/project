@model DoAn1.ViewModels.HomeHandlerVM

@{
    ViewBag.Title = "HomeHandler";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="container my-5">
    <h3>New Realse</h3>
    <div class="modal fade" id="newRealse">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h2 class="modal-title text-center">Add</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="~/HomeHandler/AddNewRealse" method="post">
                        <div class="form-group">
                            <label for="book">Book:</label>
                            <select name="id" id="book">
                                @foreach (var book in Model.Books)
                                {
                                    <option value="@book.Id">@book.Name</option>
                                }
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark">Add</button>
                        </div>
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <a id="" data-toggle="modal" data-target="#newRealse" class="btn btn-primary mb-3" href="">
        <i style="font-size: 23px;" class="fas fa-plus"></i>
        Add
    </a>
    <table class="table table-bordered text-capitalize text-center" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th></th>
            <th>Name</th>
            <th></th>
        </tr>
        </tfoot>
        <tbody>
        @foreach (var item in Model.NewRelease)
        {
            <tr>
                <td>
                    <a href="~/Book/Details/@item.BookId">
                        <img style="height: 100px;" src="~/Images/Books/@item.Book.Image" alt="">
                    </a>
                </td>
                <td>@item.Book.Name</td>
                <td>
                    <a  class="btn btn-danger" href="~/HomeHandler/RemoveNewRealse/@item.Id">Remove</a>
                </td>
            </tr>
        }

        </tbody>
    </table>
    
