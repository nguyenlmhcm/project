@model System.Collections.Generic.List<DoAn1.Models.Author>

@{
    ViewBag.Title = "Authors";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container my-5">
    <h1 class="text-center">Authors</h1>
    <a href="~/Author/Create" class="btn btn-dark mb-2">Add new author</a>
    <table class="table table-bordered text-capitalize text-center" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th></th>
            <th>Name</th>
            <th></th>
        </tr>
        </tfoot>
        <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <th>
                    <a href="~/Author/Details/@author.Id">
                        <img style="height: 150px;" src="~/Images/Authors/@author.Image" alt="">
                    </a>
                </th>
                <th>@author.Name</th>
                <th>
                    <a href="~/Author/Edit/@author.Id" class="btn btn-info">Edit</a>
                    <a href="~/Author/Delete/@author.Id" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }
        </tbody>
    </table>
</div>
