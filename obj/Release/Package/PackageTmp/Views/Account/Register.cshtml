@model DoAn1.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

<div class="container my-5">
    <h1 class="text-center">Register</h1>
    <form action="~/Account/SaveAccount" method="post">
        <div class="form-group">
            <label for="username">Username: </label>
            <input type="text" class="form-control" id="username" name="username" value="@Model.UserName" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="form-group">
            <label for="name">Name: </label>
            <input type="text" class="form-control" id="name" name="name" @Model.Name  required>
        </div>
        <div class="form-group">
            <label for="address">Address: </label>
            <input type="text" class="form-control" id="address" name="address" @Model.Address  required>
        </div>
        <div class="form-group">
            <label for="phone">Phone: </label>
            <input type="text" class="form-control" id="phone" name="phone" @Model.Phone  required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
