@model IEnumerable<DoAn1.ViewModels.HistoryVM>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<h1 class="text-center my-3">Histories</h1>
<div class="container my-5">
    <table class="table table-bordered text-capitalize text-center" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Visited</th>
            <th>Times</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
             <th>Name</th>
            <th>Username</th>
            <th>Visited</th>
            <th>Times</th>
        </tr>
        </tfoot>
        <tbody>
        @foreach (var his in Model)
        {
            <tr>
                <td>@his.Name</td>
                <td>@his.Username</td>
                <td>@his.Date.ToString("dd/MM/yyyy")</td>
                <th>@his.Times</th>
            </tr>
        }
        </tbody>
    </table>
</div>
