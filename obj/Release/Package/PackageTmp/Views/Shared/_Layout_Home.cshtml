<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewBag.Title | Books 4 Luv</title>
  <link rel="stylesheet" href="~/Content/home/bootstrap.min.css" />
  <link rel="stylesheet" href="~/Content/home/style.css" />
  <link rel="stylesheet" href="~/Content/home/imagehover.min.css">
  <link rel="icon" href="~/Images/icon.webp" />
  <script src="https://kit.fontawesome.com/5d60060976.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
</head>

<body>
@* Modal Login *@
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h2 class="modal-title text-center">Login</h2>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form action="~/Authentication/Authen" method="post">
          <div class="form-group">
            <label>Username:</label>
            <input type="text" class="form-control" required name="username" placeholder="username">
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" class="form-control" required name="password" placeholder="password">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-dark">Login</button>
            <a href="Account/Register" class="btn btn-dark">Register</a>
          </div>
        </form>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- navbar -->
<nav id="nav" class="navbar navbar-expand-lg navbar-dark fixed-top">
  <div class="container">
    <a class="navbar-brand" href="~/Home"><img src="~/Images/logo.png" alt="logo"/>
      <p>Your Favorite Bookshelf!</p>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar-menu">
      
      @* left navabr *@
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a id="home" class="nav-link active" href="~/Home">Home</a>
        </li>
        <li class="nav-item">
          <a id="about" class="nav-link" href="~/Home/About">About</a>
        </li>
        <li class="nav-item">
          <a id="contact" class="nav-link" href="~/Home/Contact">Contact</a>
        </li>
        <li class="nav-item">
          <a id="book" class="nav-link" href="~/Book">Books</a>
        </li>
        <li class="nav-item">
          <a id="author" class="nav-link" href="~/Author">Authors</a>
        </li>
      </ul>

      <!-- right navbar -->
      <div class="text-white">
        @{Html.RenderAction("CartSummary", "Cart");} |
        @{Html.RenderAction("LoginSummary", "Authentication");}
      </div>
    </div>
  </div>
</nav>

<!-- slides -->
<header id="slider" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#slider" data-slide-to="0" class="active"></li>
    <li data-target="#slider" data-slide-to="1"></li>
    <li data-target="#slider" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img id="slide-img" src="~/Images/slides/books-on-shelves-2177482.jpg" class="d-block">
      <div class="carousel-caption d-none d-md-block">
        <a class="btn btn-dark">Happy onpen with coupon: <span class="text-danger">CMNM</span></a>
      </div>
    </div>
    <div class="carousel-item">
      <img id="slide-img" src="~/Images/slides/photography-of-book-page-1029141.jpg" class=" d-block">
      <div class="carousel-caption d-none d-md-block">
        <a class="btn btn-outline-dark">Haapy open with coupon: <span class="text-danger">CMNM</span></a>
      </div>
    </div>
    <div class="carousel-item">
      <img id="slide-img" src="~/Images/slides/books-on-wooden-shelves-inside-library-2908984.jpg" class="d-block">
      <div class="carousel-caption d-none d-md-block">
        <a class="btn btn-dark">Happy open with coupon: <span class="text-danger">CMNM</span></a>
      </div>
    </div>
    <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</header>

@RenderBody()

<!-- footer -->
<footer class="bg-dark text-center text-white pt-3">
  <div class="container">
    <a class="footer-image my-5" href="~/Home">
      <img src="~/Images/logo.png" alt="logo"/>
    </a>
    <div class="contacts_address mt-3">
      <address class="address_right">
        <b>Phone: </b>
        <span class="phone">
          <a style="text-decoration: none; color: slategrey;">@ViewBag.Phone</a>
        </span><br>
        <b>Email: </b>
        <span>
          <a style="text-decoration: none; color: slategrey">@ViewBag.Email</a>
        </span>
      </address>
      <address class="address_left">
        <b>Address: </b><span style="opacity:0.7">@ViewBag.Address</span>
      </address>
      <p>Copyright &copy; Booklovers 2020 <br> Degisn by onggieoi</p>
    </div>
    <br/>
  </div>
</footer>


@* Js *@
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

@* custom js *@
<script>
    $(document).ready(() => {
      // scroll navbar effect
      $(window).scroll(() => {
        if ($(document).scrollTop() > 80) {
          $(nav).addClass("bg-dark");
        }
        else {
          $(nav).removeClass("bg-dark");
        }
      });
    });
  </script>

</body>
</html>