@model IEnumerable<DoAn1.Models.Cart>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <h3 class="text-center my-3">You got @ViewBag.Visited visited today <span><a class="text-info" href="~/History">Check it out</a></span></h3>
        <!-- Area Chart Example -->
        <div class="row">
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area mr-1"></i>
                         Orders
                    </div>
                    <div class="card-body">
                        <canvas id="myAreaChart" width="100%" height="40"></canvas>
                    </div>
                </div>
            </div>

            <!-- Bar Chart -->
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar mr-1"></i>
                        Doanh Thu
                    </div>
                    <div class="card-body">
                        <canvas id="myBarChart" width="100%" height="40"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- DataTables -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                New Orders
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-capitalize text-center" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Books</th>
                            <th>Coupon</th>
                            <th>Discount</th>
                            <th>Total</th>
                            <th>Date Order</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Books</th>
                            <th>Coupon</th>
                            <th>Discount</th>
                            <th>Total</th>
                            <th>Date Order</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        @foreach (var cart in Model)
                        {
                            <tr>
                                <td>
                                     <a class="text-decoration-none" href="~/Cart/Details/@cart.Id">@cart.Account.Name</a>
                                </td>
                                    <td>@cart.TotalItem</td>
                                    <td>@cart.Coupon.Code</td>
                                    <td>@cart.Coupon.Percents %</td>
                                    <td>$@cart.TotalPrice</td>
                                    <td>@cart.DateOrder.ToString("yyyy MMMM dd")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
    

