@model DoAn1.Models.Author

@{
    ViewBag.Title = "Create Author";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container my-5">
    <h1 class="text-center">Create An Author !</h1>
    <form action="~/Author/Save" method="post" enctype="multipart/form-data">
        <input type="number" style="display: none;" name="id" value="@Model.Id">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
        </div>

        <div class="form-group">
            <label for="img">Image</label>
            <input type="file" class="form-control-file" id="img" name="image" required value="@Model.Image">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
