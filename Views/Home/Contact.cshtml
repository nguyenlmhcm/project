@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

<link rel="stylesheet" href="~/style/contact.css"/>

<div class="container">
    <iframe class="mt-5" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4602324215043!2d106.66521371423698!3d10.776019492321813!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edba026cb75%3A0xb2a9aab49da1c58f!2zMTU1IFPGsCBW4bqhbiBI4bqhbmgsIFBoxrDhu51uZyAxMiwgUXXhuq1uIDEwLCBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1559658139464!5m2!1svi!2s"
            width="100%" height="500px" frameborder="0" style="border:0; box-shadow: 0 0 10px 10px rgba(214,214,214, 1);" allowfullscreen>
    </iframe>
</div>
<hr/>
<div class="container mb-5">
    <h1 class="text-center">Contact Us</h1>
    <br/>
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <p><b>Address</b>
            <p/>
            <p style="opacity: 0.7">@ViewBag.Info.Address</p>
            <hr/>
            <p><b>We are open</b>
            <p/>
            <p style="opacity: 0.7">Monday-Friday @ViewBag.Info.Time</p>
            <hr/>
            <p><b>Phone</b>
            <p/>
            <p style="opacity: 0.7">@ViewBag.Info.Phone</p>
            <hr/>
            <p><b>Email</b>
            <p/>
            <p style="opacity: 0.7">@ViewBag.Info.Email</p>
            <hr/>
            <a href="#" style="font-size: 30px; text-decoration: none; color: black; margin-right: 20px;" class="fa fa-facebook"></a>
            <a href="#" style="font-size: 30px;text-decoration: none; color: black; margin-right: 20px;" class="fa fa-twitter"></a>
            <a href="#" style="font-size: 30px;text-decoration: none; color: black; margin-right: 20px;" class="fa fa-instagram"></a>
        </div>
        <div class="col-sm-8 col-md-8">
            <input type="text" class="form-control" id="uname" placeholder="*Name" name="uname" required>
            <hr/>
            <input type="text" class="form-control" id="email" placeholder="*Email" name="email" required>
            <hr/>
            <input type="text" class="form-control" id="sj" placeholder="*Subject" name="sj" required>
            <hr/>
            <textarea class="form-control" id="message" name="message" rows="7" cols="100" placeholder="*Message"></textarea>
            <br/>
            <a href="" class="btn btn-lg btn-dark">SEND MESSAGE</a>
        </div>

    </div>

</div>



<script type="text/javascript">
    $(document).ready(function() {
        console.log("ready");
      $("#home").removeClass("active");
      $("#contact").addClass("active");
    });
</script>