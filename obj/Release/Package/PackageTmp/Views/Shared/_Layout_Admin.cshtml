<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Dashboard - @ViewBag.Title</title>
    <link href="~/Content/admin/styles.css" rel="stylesheet"/>
    <link rel="icon" href="~/Images/icon.webp" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">

@* Nav top *@
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="~/Admin">Admin DashBorad</a>
    <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#">
        <i class="fas fa-bars"></i>
    </button>
    <ul class="navbar-nav m-auto">
        <li class="nav-item">
            <a id="home" class="nav-link" href="~/Home">Home</a>
        </li>
        <li class="nav-item">
            <a id="about" class="nav-link" href="~/Home/About">About</a>
        </li>
        <li class="nav-item">
            <a id="contact" class="nav-link" href="~/Home/Contact">Contact</a>
        </li>
        <li class="nav-item">
            <a id="book" class="nav-link" href="~/Book">Books</a>
        </li>
        <li class="nav-item">
            <a id="author" class="nav-link" href="~/Author">Authors</a>
        </li>
    </ul>
    <a id="logout" class="mr-5 text-decoration-none text-white" href="~/Authentication/Logout">
        <i style="font-size: 23px;"  class="fas fa-sign-out-alt"></i>
    </a>
</nav>

<div id="layoutSidenav">
    <!-- Navbar left side -->
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <div class="sb-sidenav-menu">
                <div class="nav">
                    <div class="sb-sidenav-menu-heading">Core</div>
                    <a class="nav-link" href="~/Admin">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        Dashboard
                    </a>
                    <a class="nav-link" href="~/Book/Manage">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        Books
                    </a>
                    <a class="nav-link" href="~/Cart/List">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        Carts
                    </a>
                    <a class="nav-link" href="~/Account/List">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        Users
                    </a>
                    <a class="nav-link" href="~/Author/Manage">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-address-card"></i>
                        </div>
                        Authors
                    </a>
                    <a class="nav-link" href="~/Coupon">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        Coupons
                    </a>
                    <a class="nav-link" href="~/Info">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        Infomation Website
                    </a>
                    <a class="nav-link" href="~/HomeHandler">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        Books in Home handler
                    </a>
                    <a class="nav-link" href="~/History">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        Histories Visit
                    </a>
                </div>
            </div>
            <div class="sb-sidenav-footer">
                <div class="small">Logged in as: Admin</div>
            </div>
        </nav>
    </div>
    
    <div id="layoutSidenav_content">
        @RenderBody()
        
        @* footer *@
        <footer class="py-4 bg-dark mt-auto">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Booklovers 2020 <br> Degisn by onggieoi</div>
                    <div class="text-muted">
                        <a>Privacy Policy</a>
                        &middot;
                        <a>Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/Scripts/admin/scripts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="~/Scripts/admin/chart-area-demo.js"></script>
<script src="~/Scripts/admin/chart-bar-demo.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
<script src="~/Scripts/admin/datatables-demo.js"></script>
</body>
</html>